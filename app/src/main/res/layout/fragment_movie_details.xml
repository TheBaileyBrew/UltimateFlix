<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/movie_tagline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/margin_vertical_8dp"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        android:textSize="@dimen/text_standard_18sp"
        android:textStyle="italic"
        android:textColor="@color/colorPrimaryText"
        android:gravity="center_horizontal"
        tools:text="An entire universe. Once and for all."/>
    <View
        android:id="@+id/synopsis_guideline"
        app:layout_constraintLeft_toLeftOf="@id/movie_tagline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_genres"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        android:layout_marginTop="@dimen/margin_vertical_8dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryTextSelected"
        />
    <TextView
        android:id="@+id/movie_genres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/margin_vertical_8dp"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        app:layout_constraintTop_toBottomOf="@id/genre_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/movie_tagline"
        android:textSize="@dimen/standard_xhdpi_text16sp"
        android:textColor="@color/colorPrimaryText"
        android:maxLines="2"
        tools:text="These are genres"/>
    <View
        android:id="@+id/genre_guideline"
        app:layout_constraintLeft_toLeftOf="@id/movie_tagline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/movie_tagline"
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:layout_marginTop="@dimen/margin_vertical_8dp"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        android:layout_height="2dp"
        android:background="@color/colorPrimaryTextSelected"
        />
    <TextView
        android:id="@+id/synopsis_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/synopsis_guideline"
        android:layout_marginStart="@dimen/margin_horizontal_16dp"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        android:textSize="@dimen/text_standard_18sp"
        android:textColor="@color/colorPrimaryText"
        tools:text="@string/lorem_ipsum"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/synopsis_text"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="@dimen/margin_vertical_8dp">
        <!-- Runtime & Release Date-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_horizontal_8dp"
            app:cardCornerRadius="@dimen/half_margin_vertical_4dp"
            android:elevation="6dp"
            android:backgroundTint="@color/colorAccentFade">
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/half_margin_vertical_4dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                android:textColor="@color/colorPrimaryDark"
                android:text="RUNTIME"/>
            <TextView
                android:id="@+id/runtime_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin_vertical_4dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                android:text="LANGUAGE"/>
            <TextView
                android:id="@+id/language_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/half_margin_vertical_4dp" />

        </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Language & Vote Count/Total -->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_horizontal_8dp"
            app:cardCornerRadius="@dimen/half_margin_vertical_4dp"
            android:elevation="6dp"
            android:backgroundTint="@color/colorAccentFade">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/half_margin_vertical_4dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="BUDGET"/>
                <TextView
                    android:id="@+id/budget_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/half_margin_vertical_4dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/half_margin_vertical_4dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="REVENUE"/>
                <TextView
                    android:id="@+id/revenue_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/half_margin_vertical_4dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <!-- Static Progress Imagery-->
        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="100dp"
            android:layout_margin="@dimen/margin_horizontal_8dp"
            app:cardCornerRadius="@dimen/half_margin_vertical_4dp"
            android:elevation="6dp"
            android:backgroundTint="@color/colorAccentFade">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/half_margin_vertical_4dp">
                <com.thebaileybrew.ultimateflix.adapters.StaticProgressBar
                    android:id="@+id/popularity_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    app:arc_stroke_width="10dp"
                    app:arc_text_size="20sp"
                    app:arc_text_color="@color/colorPrimaryDark"
                    app:arc_bottom_text_size="12sp"
                    app:arc_bottom_text="RATING"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>