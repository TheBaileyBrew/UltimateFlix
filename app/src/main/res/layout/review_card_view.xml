<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorPrimaryFade"
    android:layout_margin="@dimen/half_margin_vertical_4dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/card_elevation_6dp"
        app:cardBackgroundColor="@color/colorPrimaryFade"
        app:cardCornerRadius="@dimen/half_margin_vertical_4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryFade"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/review_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginStart="@dimen/margin_horizontal_16dp"
                tools:text="BaileyBrew 33"
                android:textStyle="bold"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_standard_18sp"/>
            <TextView
                android:id="@+id/review_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_vertical_8dp"
                android:paddingStart="@dimen/half_margin_vertical_4dp"
                android:paddingEnd="@dimen/half_margin_vertical_4dp"
                app:layout_constraintTop_toBottomOf="@id/review_author"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginBottom="@dimen/margin_vertical_8dp"
                tools:text="@string/lorem_ipsum"
                android:lines="5"
                android:ellipsize="end"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/text_standard_18sp"
                android:textStyle="italic"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>