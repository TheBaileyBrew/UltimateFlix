<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".DetailsActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height"
        android:fitsSystemWindows="true"
        android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar">
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/colorWhiteFade"
            app:expandedTitleMarginEnd="@dimen/expand_title_margin"
            app:expandedTitleMarginBottom="@dimen/margin_vertical_16dp"
            app:expandedTitleMarginStart="@dimen/expand_title_margin_start"
            app:expandedTitleTextAppearance="@style/ExpandedToolbar"
            app:collapsedTitleTextAppearance="@style/CollapsedToolbar"
            android:background="@android:color/white"
            app:layout_scrollFlags="snap">
            <com.github.florent37.diagonallayout.DiagonalLayout
                android:id="@+id/movie_backdrop_diagonal_holder"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                diagonal:layout_constraintTop_toTopOf="parent"
                diagonal:layout_constraintStart_toStartOf="parent"
                diagonal:layout_constraintEnd_toEndOf="parent"
                android:background="@android:color/white"
                android:elevation="15dp"
                diagonal:diagonal_angle="10"
                diagonal:diagonal_direction="left"
                diagonal:diagonal_position="bottom">
                <com.flaviofaria.kenburnsview.KenBurnsView
                    android:id="@+id/movie_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"

                    android:src="@drawable/flix_logo" />
            </com.github.florent37.diagonallayout.DiagonalLayout>
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?android:actionBarSize"
                android:elevation="18dp"
                app:titleTextColor="@color/colorPrimaryDark"
                android:layout_gravity="end"
                app:layout_collapseMode="none"/>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/credit_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:layout_gravity="bottom"
        app:layout_anchor="@id/app_toolbar"
        app:layout_anchorGravity="bottom"/>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_holder_for_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchor="@id/credit_recycler"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_gravity="bottom"
        app:layout_anchorGravity="bottom"
        android:layout_marginBottom="?android:actionBarSize">
        <FrameLayout
            android:id="@+id/content_for_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="true"/>
    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_anchorGravity="bottom|center_horizontal"
        android:layout_gravity="bottom"
        app:itemTextColor="@drawable/bottom_navigation_state_check_colors"
        app:itemIconTint="@drawable/bottom_navigation_state_check_colors"
        app:menu="@menu/navigation" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>