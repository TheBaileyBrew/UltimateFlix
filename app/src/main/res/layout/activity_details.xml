<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:diagonal="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <com.github.florent37.diagonallayout.DiagonalLayout
        android:id="@+id/movie_backdrop_diagonal_holder"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        diagonal:layout_constraintTop_toTopOf="parent"
        diagonal:layout_constraintStart_toStartOf="parent"
        diagonal:layout_constraintEnd_toEndOf="parent"
        android:elevation="15dp"
        diagonal:diagonal_angle="10"
        diagonal:diagonal_direction="left"
        diagonal:diagonal_position="bottom">
        <com.flaviofaria.kenburnsview.KenBurnsView
            android:id="@+id/movie_backdrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/flix_logo" />


    </com.github.florent37.diagonallayout.DiagonalLayout>

    <TextView
        android:id="@+id/movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/movie_backdrop_diagonal_holder"
        app:layout_constraintEnd_toEndOf="@id/movie_backdrop_diagonal_holder"
        android:layout_marginEnd="@dimen/margin_horizontal_16dp"
        android:layout_marginBottom="@dimen/margin_vertical_8dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/credit_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        app:layout_constraintTop_toBottomOf="@id/movie_backdrop_diagonal_holder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <!-- Can I load this Recycler with Pagination? Endless scroll? -->
    <!-- **CONSTRAINT: BELOW diagonal_holder** -->

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_holder_for_frame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/credit_recycler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation">
        <FrameLayout
            android:id="@+id/content_for_fragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </androidx.core.widget.NestedScrollView>

    <!-- Insert a Frame to act as a holder for fragment data -->
    <!-- Fragments should be loaded via FragmentManager and not ViewPager -->
    <!-- This frame should be wrapped in a NestedScrollView -->
    <!-- **CONSTRAINT: BELOW credit_recycler** -->


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemTextColor="@drawable/bottom_navigation_state_check_colors"
        app:itemIconTint="@drawable/bottom_navigation_state_check_colors"
        app:menu="@menu/navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>