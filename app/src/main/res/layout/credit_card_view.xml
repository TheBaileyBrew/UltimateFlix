<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/half_margin_vertical_4dp"
    android:nestedScrollingEnabled="true">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="@dimen/card_elevation_6dp"
        app:cardCornerRadius="@dimen/half_margin_vertical_4dp"
        app:strokeColor="@color/colorPrimary"
        app:strokeWidth="1dp"
        android:layout_marginBottom="@dimen/margin_vertical_8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="@dimen/half_margin_vertical_4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="125dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/credit_actor_image"
                    android:layout_width="110dp"
                    android:layout_height="125dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="@string/actor_credit_image"
                    android:foreground="?android:selectableItemBackground"
                    tools:src="@drawable/thanos"/>
            </RelativeLayout>
            <net.cachapa.expandablelayout.ExpandableLayout
                android:id="@+id/expandable_credit_view"
                android:layout_width="110dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:el_duration="1000"
                app:el_expanded="true"
                app:el_parallax="0.5">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:elevation="8dp"
                    android:background="@color/colorWhiteWash">
                    <TextView
                        android:id="@+id/credit_actor_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_standard_18sp"
                        android:textColor="@color/colorWhite"
                        android:shadowColor="@color/colorPrimaryDark"
                        android:shadowDy="2"
                        android:shadowDx="2"
                        tools:text="Actor Name Here"/>
                    <TextView
                        android:id="@+id/actor_appears_as"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/credit_actor_name"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="2dp"
                        android:textStyle="italic"
                        android:textColor="@color/colorWhite"
                        android:shadowDy="2"
                        android:shadowDx="2"
                        android:text="@string/static_text_as_credit"/>
                    <TextView
                        android:id="@+id/credit_character_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/actor_appears_as"
                        android:layout_marginTop="2dp"
                        android:maxLines="2"
                        android:textSize="@dimen/text_standard_18sp"
                        android:textColor="@color/colorWhite"
                        android:shadowDy="2"
                        android:shadowDx="2"
                        tools:text="Character Name"/>
                </RelativeLayout>
            </net.cachapa.expandablelayout.ExpandableLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>